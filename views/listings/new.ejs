<%layout("/layouts/boilerplate.ejs") %>
<body>
  
    <div class="row  mt-3">
        <div class="col-8 offset-2">
              <h3>Create a New Listing</h3>                            
    <form action="/listings" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
                <label for="title" class="form-label">Title</label>
           <input type="text" name="listing[title]" placeholder="title" class="form-control" required>
           <div class="valid-feedback">Title looks cool!</div>
        </div>
           
        <div class="mb-3">
            <label for="image link" class="form-label">upload Image</label>
            <input type="file" name="listing[image]" class="form-control" required >
        </div>
           
                
           <div class="mb-3">
            <label for="image filename" class="form-label">Image Filename</label>
            <input type="text" name="listing[image][filename]" placeholder="image filename"  class="form-control">
           </div>

         <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" placeholder="description"  class="form-control" required></textarea>
         </div>
     
         <div class="row">
            <div class="mb-3 col-md-4" >
                <label for="price" class="form-label">Price</label>
                <input type="text" name="listing[price]" placeholder="price" class="form-control" required>
              </div>
           
              <div class="mb-3 col-md-8">
                <label for="country" class="form-label">country</label>
                <input type="text" name="listing[country]" placeholder="country" class="form-control" required>
                <div class="invalid-feedback"> country should be beautiful!</div>
              </div>
        </div>
          
         <div class="mb-3">
            <label for="location" class="form-label">location</label>
            <input type="text" name="listing[location]" placeholder="location"  class="form-control" required>
         </div>
           <button class="btn btn-dark btn-add mt-3">add</button>  
    </form>
</div>
</div>
</body>
</html>